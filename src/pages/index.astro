---
import Layout from '~/layouts/PageLayout.astro';
import Header from '../components/widgets/header.astro';
import Footer from '../components/widgets/footer.astro';

const metadata = {
  title: 'A â€” Coming Soon',
  ignoreTitleTemplate: true,
};
---

<head>
  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-XDZDEPH1KD"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-XDZDEPH1KD');
  </script>
</head>

<Layout metadata={metadata}>
  <!-- Include our updated header -->
  <Header />
  
  <section class="flex flex-col items-center justify-center h-screen text-center">
    <h1 class="coming-soon-text fade-in">Coming Soon</h1>
    <img src="/logo.png" alt="CBB Logo" class="logo-style fade-in mt-12" />
  </section>
  
  <!-- Include our updated footer -->
  <Footer />
  
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Anton&display=swap');
    .coming-soon-text {
      font-family: 'Anton', sans-serif;
      font-size: 6rem;
      font-weight: 900;
      color: #111;
    }
    .logo-style {
      width: 150px;
      height: auto;
      object-fit: contain;
    }
    .fade-in {
      opacity: 0;
      animation: fadeIn 1.5s ease-in-out forwards;
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</Layout>
